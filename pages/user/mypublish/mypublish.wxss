.page-body {
  display: flex;
  flex: 1;
  flex-direction: column;
}

.item {
  display: flex;
  padding: 15rpx 15rpx;
  border-bottom: 1rpx solid #eee;
  cursor: pointer;
}
.item .poster {
  width: 128rpx;
  height: 128rpx;
  margin-right: 20rpx;
}
.item .meta {
  flex: 1;
}
.item .meta .title, .item .meta .artists, .item .meta .time1, .item .meta .time2 {
  display: block;
  margin-bottom: 15rpx;
}
.item .meta .title {
  font-size: 34rpx;
}
.item .meta .artists {
  font-size: 34rpx;
}
.item .time1 {
  font-size: 34rpx;
}
.item .time2 {
  font-size: 34rpx;
  color: #999;
  margin-top:15rpx;
}


.btn-valid {
  width: 100%;
  background-color: #F5F5F5;
  border-radius: 8rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: #696969;
}



.round-click{
    height: 110rpx;
    width: 110rpx;
    background-color: #db2626;
    border-radius: 100%;
    position: fixed;
    bottom: 80rpx;
    right: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9;
}
.round-click view{
    font-size: 34rpx;
    max-width: 80rpx;
    color: #fff;
    text-align: center;
}